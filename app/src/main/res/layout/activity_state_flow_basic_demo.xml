<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StateFlowBasic.StateFlowBasicDemoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.JetPackDemo.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.JetPackDemo.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="@dimen/fab_margin">

        <TextView
            android:id="@+id/txtLiveData"
            style="@style/TextViewStyle.Large"
            android:layout_marginBottom="@dimen/eight"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello Data"
           />

        <Button
            android:id="@+id/btnLiveData"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Live Data "/>


        <TextView
            android:id="@+id/txtStateFlow"
            style="@style/TextViewStyle.Large"
            android:layout_marginTop="@dimen/fab_margin"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello Data"
            />
        <Button
            android:id="@+id/btnStateFlow"
            style="@style/myCustomGreenButton"
            android:layout_marginTop="@dimen/eight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="State Flow "/>



        <TextView
            android:id="@+id/txtFlow"
            style="@style/TextViewStyle.Large"
            android:layout_marginTop="@dimen/fab_margin"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello Data"
            />


        <Button
            android:id="@+id/btnFlow"
            style="@style/ButtonBlue"
            android:layout_marginTop="@dimen/eight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Flow "/>


        <TextView
            android:id="@+id/txtShareFlow"
            style="@style/TextViewStyle.Large"
            android:layout_marginTop="@dimen/fab_margin"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello Data"
            />

        <Button
            android:id="@+id/btnShareFlow"
            style="@style/myCustomButton"
            android:layout_marginTop="@dimen/eight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Shared Flow"/>

        <View
            android:layout_marginTop="@dimen/eight"

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_dark"/>





    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>